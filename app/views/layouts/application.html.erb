<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= "InternshipApp" %></title>

   <%= javascript_include_tag :jquery %>
   <%= javascript_include_tag :bootstrap %>

    <%= stylesheet_link_tag "application" %>
    <%= csrf_meta_tags %>

  </head>
  <body>
			   <div class="modal hide fade" id="login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			   <div class="modal-header">
			   <h3 id="myModalLabel">Log in</h3>
			   </div>
			   <div class="modal-body">
			   	<% if current_user %>
        			Signed in
				    <% else %>
				        <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
				      <% end %>
			   </div>
			   <div class="modal-footer">
			   </div>
			   </div>
			   <!-- End of Log In Modal -->

          <% if current_user %>
            <div class="navbar navbar-fixed-top">
              <div class="navbar-inner">
                <div class="container-fluid">
                  <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </a>
                  <a class="brand" href="/">BackPack</a>
                  <div class="nav-collapse">
                    <ul class="nav">
                      <li class="active">
                      <%= link_to "Profile", "/users" %>
                      </li>
                    <ul class="nav pull-right">
                      <li class="divider-vertical"></li>
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Account <b class="caret"></b></a>
                        <ul class="dropdown-menu">
		                      
                          <li><%= link_to "My Posts", users_path %></li>
                          <li><%= link_to "Sign Out", signout_path, id: "sign_out" %></li>
                        </ul>
                       
                        </ul>
                      </li>
                    </ul>
                  </div><!-- /.nav-collapse -->
                </div><!-- container-->
              </div><!-- /navbar-inner -->
            </div><!-- /navbar -->
          <% else %>
              <div class="navbar navbar-fixed-top">
                 <div class="navbar-inner">
                    <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    </a>
                   <a class="brand" href="#">BackPack</a>
                    
                                <div class="nav-collapse">
                              
                                <ul class="nav pull-right">
                                <li><button class="btn" id="loginclick">Sign In</button></li>
                                <li class="divider-vertical"></li>
                               </li>
                         </ul>
                        </div><!-- /.nav-collapse -->
                    </div><!-- container>
                 </div><! /navbar-inner -->
             </div><!-- /navbar -->
          <% end %>

   <% if current_user %>
    <div class="container-fluid" style="margin-top:40px;">
        <div class="row">
        <div class="span3">

              </ul>
            </div><!--/.well -->
          </div><!--/span-->
          <div class="span9">
             <%= yield %>
          </div>
        </div><!--/row-->

      <footer>
        <p>&copy;Naman</p>
      </footer>
    </div> <!-- /container -->
  <% else %>
   <div class="container" style="margin-top:40px;">
     <%= yield %>
      <footer>
        <p>&copy;Naman</p>
      </footer>
    </div> 
    <% end %>
  </body>
  <script>
   $('#loginclick').click(function(){
    $('#login').modal('show')
   });
</script>
</html>